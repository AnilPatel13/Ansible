#arangodb bin dir
arangodb_bin_dir: '{{arangodb_home_path}}/bin'

#arangodb logs directory
arangodb_logs_dir: '{{LOGS}}/{{arangodb_version}}/logs'

#arangodb data directory
arangodb_data: '{{DATA}}/{{arangodb_version}}'

#arangodb agency directory
arangodb_agency_dir: '{{arangodb_data}}/agency'

#arangodb dbserver directory
arangodb_dbserver_dir: '{{arangodb_data}}/dbserver'

#arangodb coordinator directory
arangodb_coordinator_dir: '{{arangodb_data}}/coordinator'

#arangodb package
arangodb_package: ['devtoolset-6-gcc-c++','devtoolset-6-gcc','devtoolset-6-gcc-gfortran','cmake3','cmake']
